{
    "pack": {
        "pack_format": 61,
        "description": [
            {
                "text": "Adds some vanilla+ recipes and features",
                "color": "green"
            }
        ]
    },
    "filter": {
        "block": [
            {
                "namespace": "minecraft",
                "path": "^recipe/.+stonecutting\\.json$"
            },
            {
                "namespace": "minecraft",
                "path": "^recipe/\\w+_stained_glass(?:_pane_from_glass_pane)?\\.json$"
            },
            {
                "namespace": "minecraft",
                "path": "^recipe/(?!.*glazed)\\w+_terracotta\\.json$"
            }
        ]
    }
}